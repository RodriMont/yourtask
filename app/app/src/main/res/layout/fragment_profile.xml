<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/placeholder"/>

    <TextView
        android:id="@+id/profile_choose_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_profile_image"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Modifica l'immagine profilo"/>

    <TextView
        android:id="@+id/profile_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_choose_image_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Username"/>

    <View
        android:id="@+id/profile_username_shape"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/profile_username_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext"/>

    <EditText
        android:id="@+id/profile_username_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_username_label"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@null"/>

    <TextView
        android:id="@+id/profile_bio_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_username_shape"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Bio"/>

    <View
        android:id="@+id/profile_bio_shape"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/profile_bio_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext"/>

    <EditText
        android:id="@+id/profile_bio_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_bio_label"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@null"/>

    <Button
        android:id="@+id/apply_button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_bio_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="#FFFFFF"
        android:text="Applica"
        android:background="@drawable/rounded_button"/>
</RelativeLayout>