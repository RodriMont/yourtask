<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collaborators_listview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_collaborator_container"
    android:orientation="vertical">

    <TextView
        android:id="@+id/collaborators_listview_item_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="start"
        android:text="default"/>

    <ImageView
        android:id="@+id/collaborators_listview_remove_item_button"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="end"
        android:src="@drawable/icon_delete_collaborator"/>

</FrameLayout>