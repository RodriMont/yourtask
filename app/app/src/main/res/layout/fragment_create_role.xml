<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskFragment">

    <TextView
        android:id="@+id/new_role_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        android:text="Nuovo ruolo"/>

    <TextView
        android:id="@+id/new_role_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_role_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Nome ruolo"/>

    <View
        android:id="@+id/new_role_shape"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/new_role_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext"/>

    <EditText
        android:id="@+id/new_role_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_role_label"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@null"/>

    <TextView
        android:id="@+id/new_role_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_role_shape"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Colore"/>

    <LinearLayout
        android:id="@+id/new_role_color_layout"
        android:layout_below="@id/new_role_color_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_edittext"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/new_role_color_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/baseline_colorize_24"
            android:layout_gravity="end"/>
    </LinearLayout>

    <Button
        android:id="@+id/new_role_create_button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_role_color_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="#FFFFFF"
        android:text="Crea"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>
