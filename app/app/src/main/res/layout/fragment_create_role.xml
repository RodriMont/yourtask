<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskFragment">

    <TextView
        android:id="@+id/new_role_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        android:text="Nuovo task"/>

    <TextView
        android:id="@+id/new_role_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_role_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Nome Ruolo"/>

    <View
        android:id="@+id/new_role_shape"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/new_role_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_role_label"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@null"/>

    <LinearLayout
        android:layout_below="@id/new_role_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/linear">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_colorize_24"
            android:layout_gravity="end"
            android:id="@+id/btn"
            />
        </LinearLayout>
</RelativeLayout>
